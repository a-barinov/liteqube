#!/bin/sh

/usr/bin/sudo /sbin/shutdown -c 1>/dev/null 2>&1
PASSWORD="/home/user/password-${QREXEC_REMOTE_DOMAIN}"
/usr/bin/qrexec-client-vm dom0 alte.Message+"${QREXEC_REMOTE_DOMAIN} requested password for $1"
/usr/bin/sudo /sbin/shutdown +2 1>/dev/null 2>&1
[ -x "${PASSWORD}" ] && "${PASSWORD}" "$1" || exit 1
exit 0
